<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Website Health Monitor</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="wrapper">
        <!-- Page Content -->
        <div class="content full-width">
            <!-- Main Content -->
            <main class="container-fluid py-4">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="card shadow-sm">
                            <div class="card-body p-5">
                                <div class="text-center mb-4">
                                    <h1 class="h3"><i class="fas fa-heartbeat text-primary me-2"></i>Website Health Monitor</h1>
                                    <p class="text-muted">Create a new account</p>
                                </div>

                                <% if (typeof error !== 'undefined' && error) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <%= error %>
                                    </div>
                                <% } %>

                                <form action="/auth/register" method="POST">
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" class="form-control" id="username" name="username" placeholder="Choose a username" required value="<%= typeof username !== 'undefined' ? username : '' %>">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="fullName" class="form-label">Full Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                                            <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name" required value="<%= typeof fullName !== 'undefined' ? fullName : '' %>">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email address</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required value="<%= typeof email !== 'undefined' ? email : '' %>">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="timezone" class="form-label">Timezone</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-globe"></i></span>
                                            <select class="form-select" id="timezone" name="timezone">
                                                <option value="UTC" <%= typeof timezone !== 'undefined' && timezone === 'UTC' ? 'selected' : '' %>>UTC</option>
                                                <option value="America/New_York" <%= typeof timezone !== 'undefined' && timezone === 'America/New_York' ? 'selected' : '' %>>Eastern Time (ET)</option>
                                                <option value="America/Chicago" <%= typeof timezone !== 'undefined' && timezone === 'America/Chicago' ? 'selected' : '' %>>Central Time (CT)</option>
                                                <option value="America/Denver" <%= typeof timezone !== 'undefined' && timezone === 'America/Denver' ? 'selected' : '' %>>Mountain Time (MT)</option>
                                                <option value="America/Los_Angeles" <%= typeof timezone !== 'undefined' && timezone === 'America/Los_Angeles' ? 'selected' : '' %>>Pacific Time (PT)</option>
                                                <option value="Europe/London" <%= typeof timezone !== 'undefined' && timezone === 'Europe/London' ? 'selected' : '' %>>London</option>
                                                <option value="Europe/Paris" <%= typeof timezone !== 'undefined' && timezone === 'Europe/Paris' ? 'selected' : '' %>>Paris</option>
                                                <option value="Asia/Tokyo" <%= typeof timezone !== 'undefined' && timezone === 'Asia/Tokyo' ? 'selected' : '' %>>Tokyo</option>
                                                <option value="Asia/Shanghai" <%= typeof timezone !== 'undefined' && timezone === 'Asia/Shanghai' ? 'selected' : '' %>>Shanghai</option>
                                                <option value="Australia/Sydney" <%= typeof timezone !== 'undefined' && timezone === 'Australia/Sydney' ? 'selected' : '' %>>Sydney</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input type="password" class="form-control" id="password" name="password" placeholder="Create a password" required>
                                        </div>
                                        <div class="form-text">Password must be at least 8 characters long.</div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
                                        </div>
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer bg-light py-3 text-center">
                                Already have an account? <a href="/auth/login" class="text-decoration-none">Sign in</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 