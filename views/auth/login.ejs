<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Website Health Monitor</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="wrapper">
        <!-- Page Content -->
        <div class="content full-width">
            <!-- Main Content -->
            <main class="container-fluid py-4">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="card shadow-sm">
                            <div class="card-body p-5">
                                <div class="text-center mb-4">
                                    <h1 class="h3"><i class="fas fa-heartbeat text-primary me-2"></i>Website Health Monitor</h1>
                                    <p class="text-muted">Sign in to your account</p>
                                </div>

                                <% if (typeof error !== 'undefined' && error) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <%= error %>
                                    </div>
                                <% } %>

                                <form action="/auth/login" method="POST">
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username or Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username or email" required value="<%= typeof username !== 'undefined' ? username : '' %>">
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="password" class="form-label">Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                                        </div>
                                        <div class="form-text text-end">
                                            <a href="/auth/forgot-password" class="text-decoration-none">Forgot password?</a>
                                        </div>
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer bg-light py-3 text-center">
                                Don't have an account? <a href="/auth/register" class="text-decoration-none">Sign up</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 