<div class="sidebar">
    <div class="sidebar-header">
        <h3><i class="fas fa-heartbeat me-2"></i>Health Monitor</h3>
    </div>

    <ul class="list-unstyled components">
        <li class="<%= title === 'Dashboard' ? 'active' : '' %>">
            <a href="/dashboard">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
        </li>
        <li class="<%= title.includes('Website') ? 'active' : '' %>">
            <a href="/websites">
                <i class="fas fa-globe me-2"></i>Websites
            </a>
        </li>
        <li class="<%= title.includes('Report') ? 'active' : '' %>">
            <a href="/reports">
                <i class="fas fa-chart-bar me-2"></i>Reports
            </a>
        </li>
        <% if (user && user.role === 'admin') { %>
            <li class="<%= title.includes('User') ? 'active' : '' %>">
                <a href="/users">
                    <i class="fas fa-users me-2"></i>Users
                </a>
            </li>
            <li class="<%= title.includes('Setting') ? 'active' : '' %>">
                <a href="/settings">
                    <i class="fas fa-cog me-2"></i>Settings
                </a>
            </li>
        <% } %>
        <li>
            <a href="/status">
                <i class="fas fa-server me-2"></i>Status Page
            </a>
        </li>
        <li>
            <a href="/api-docs">
                <i class="fas fa-code me-2"></i>API Docs
            </a>
        </li>
    </ul>

    <div class="sidebar-footer">
        <p class="text-center mb-0">
            <small>&copy; <%= new Date().getFullYear() %> Health Monitor</small>
        </p>
    </div>
</div> 